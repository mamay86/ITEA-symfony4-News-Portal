{% extends 'base.html.twig' %}

{% block title %}Post{% endblock %}

{% block main %}
    <main role="main">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <img class="card-img-top" src="img/{{ post.image }}" alt="">
                    <div class="card-body">
                        <b>{{ post.category.title }}</b>
                        <p class="card-text">
                            {{ post.title }}
                        </p>
                        <p>
                            {{ post.body }}
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </main>
{% endblock %}